<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemViewBooking_clLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_4sdp"
    android:background="@drawable/shape_boder_file_claim"
    android:foreground="?android:attr/selectableItemBackground"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/itemNewViewBooking_imgView"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/_90sdp"/>

    <TextView
        android:id="@+id/itemNewViewBooking_tvTitle"
        fontPath="@string/Helvetica_bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/greyishBrownThree"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/itemNewViewBooking_imgView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/itemNewViewBooking_imgView"/>

    <TextView
        android:id="@+id/itemNewViewBooking_tvDiscription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/greyishBrownThree"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/itemNewViewBooking_imgView"
        app:layout_constraintLeft_toRightOf="@+id/itemNewViewBooking_imgView"
        app:layout_constraintRight_toRightOf="parent"/>

    <include
        layout="@layout/view_loading_image"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@+id/itemNewViewBooking_imgView"
        app:layout_constraintLeft_toLeftOf="@+id/itemNewViewBooking_imgView"
        app:layout_constraintRight_toRightOf="@+id/itemNewViewBooking_imgView"
        app:layout_constraintTop_toTopOf="@+id/itemNewViewBooking_imgView"/>

</android.support.constraint.ConstraintLayout>