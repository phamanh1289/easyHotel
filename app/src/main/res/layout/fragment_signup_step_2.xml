<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_two"
    android:clickable="true"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_icons_login" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_50sdp"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_boder_text_view"
                android:padding="@dimen/_8sdp">

                <ImageView
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_user_name" />

                <EditText
                    android:id="@+id/fragSignUp_etUserName"
                    fontPath="@string/Helvetica_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:background="@null"
                    android:hint="@string/first_name"
                    android:inputType="textCapWords"
                    android:textColor="@color/whiteThree"
                    android:textColorHint="@color/whiteThree"
                    android:textSize="14.5sp" />
            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:background="@drawable/shape_boder_text_view"
                android:padding="@dimen/_8sdp">


                <EditText
                    android:id="@+id/fragSignUp_etDOB"
                    fontPath="@string/Helvetica_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/_24sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@null"
                    android:hint="@string/dob"
                    android:textColor="@color/whiteThree"
                    android:textColorHint="@color/whiteThree"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:src="@drawable/ic_dob" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:background="@drawable/shape_boder_text_view"
                android:padding="@dimen/_8sdp">

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:src="@drawable/ic_mobi_phone" />

                <EditText
                    android:id="@+id/fragSingUp_etMobiPhone"
                    fontPath="@string/Helvetica_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/_24sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@null"
                    android:hint="@string/mobi_phone"
                    android:inputType="number"
                    android:textColor="@color/whiteThree"
                    android:textColorHint="@color/whiteThree"
                    android:textSize="14sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:background="@drawable/shape_boder_text_view"
                android:padding="@dimen/_8sdp">

                <ImageView
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/_1sdp"
                    android:src="@drawable/ic_address" />

                <EditText
                    android:id="@+id/fragSingUp_etAddress"
                    fontPath="@string/Helvetica_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/_24sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@null"
                    android:hint="@string/address"
                    android:inputType="textCapWords"
                    android:textColor="@color/whiteThree"
                    android:textColorHint="@color/whiteThree"
                    android:textSize="14sp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_14sdp"
                android:padding="@dimen/_8sdp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/fragSignUp_llMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fragSignUp_ivMale"
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/selector_male_while" />

                        <TextView
                            android:id="@+id/fragSignUp_tvMale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:gravity="bottom"
                            android:text="@string/male"
                            android:textColor="@drawable/selector_text_while"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragSignUp_llFemale"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/fragSignUp_ivFemale"
                            android:layout_width="@dimen/_14sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/selector_female_while" />

                        <TextView
                            android:id="@+id/fragSignUp_tvFemale"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:gravity="bottom"
                            android:text="@string/female"
                            android:textColor="@drawable/selector_text_while"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>

            <TextView
                android:id="@+id/fragSignUp_tvLogin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_24sdp"
                android:background="@drawable/selector_text_view"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/submit"
                android:textColor="@color/whiteThree"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
