<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteThree"
    android:clickable="true"
    android:orientation="vertical">

    <include layout="@layout/base_action_bar_home" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_16sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragFAQDetail_tvTitle"
                fontPath="@string/Helvetica_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/denimBlue"
                android:layout_marginBottom="@dimen/_16sdp"
                android:text="Q : Làm sao để cập nhật thông tin ?"
                android:textSize="@dimen/_16sdp" />
<include layout="@layout/base_line"/>
            <TextView
                android:id="@+id/fragFAQDetail_tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/denimBlue"
                android:layout_marginTop="@dimen/_8sdp"
                android:textSize="@dimen/_12sdp"
                android:text="A : Các bạn vào phần 'Cài đặt' chọn 'My Profile' để cập nhật thông tin của mình."/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
