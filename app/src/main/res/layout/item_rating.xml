<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_6sdp"
    app:cardElevation="@dimen/_6sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/whiteThree"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/_6sdp">

        <TextView
            android:id="@+id/itemRating_tvScore"
            fontPath="@string/Helvetica_bold"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/shape_boder_red"
            android:gravity="center_vertical|center_horizontal"
            android:text="5"
            android:textColor="@color/whiteThree"
            android:textSize="@dimen/_9sdp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="@dimen/_6sdp"
            android:paddingLeft="@dimen/_6sdp">

            <TextView
                android:id="@+id/itemRating_tvUserName"
                fontPath="@string/Helvetica_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nguyen Van A"
                android:textColor="@color/denimBlue"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:id="@+id/itemRating_tvDate"
                fontPath="@string/Helvetica_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="@dimen/_2sdp"
                android:text="Nguyen Van A"
                android:textColor="@color/blur_background"
                android:textSize="@dimen/_8sdp"/>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
