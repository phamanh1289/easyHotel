<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whiteThree"
            android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            fontPath="@string/Helvetica_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/denimBlue"
            android:padding="@dimen/_4sdp"
            android:text="Single"
            android:textColor="@color/whiteThree"
            android:textSize="@dimen/_16sdp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragBooking_rvSingle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                android:padding="@dimen/_8sdp">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/fragBooking_tvNoDataSingle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="@string/out_room"
                android:textColor="@color/denimBlue"
                android:textSize="@dimen/_22sdp"/>
        </FrameLayout>

        <TextView
            fontPath="@string/Helvetica_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/denimBlue"
            android:padding="@dimen/_4sdp"
            android:text="Double"
            android:textColor="@color/whiteThree"
            android:textSize="@dimen/_16sdp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragBooking_rvDouble"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                android:padding="@dimen/_8sdp">

            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/fragBooking_tvNoDataDouble"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:text="@string/out_room"
                android:textColor="@color/denimBlue"
                android:textSize="@dimen/_22sdp"/>
        </FrameLayout>
    </LinearLayout>
</ScrollView>
