<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/whiteThree"
              android:clickable="true"
              android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/fragHomeDetail_tvFormDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:hint="Form Date"
                android:inputType="date"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/denimBlue"
                android:textColorHint="@color/denimBlue"
                android:textSize="@dimen/_12sdp" />

            <EditText
                android:id="@+id/fragHomeDetail_tvToDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="false"
                android:gravity="center_horizontal"
                android:hint="To Date"
                android:inputType="date"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/denimBlue"
                android:textColorHint="@color/denimBlue"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/fragHomeDetail_tvRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="Room"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/denimBlue"
                android:textColorHint="@color/denimBlue"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
