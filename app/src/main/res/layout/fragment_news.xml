<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemDiscover_llMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <include layout="@layout/base_action_bar_home" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:paddingTop="@dimen/_8sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/itemDiscover_ivDiscover"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_news_demo"
            app:riv_corner_radius="@dimen/_15sdp"/>

        <TextView
            android:id="@+id/itemDiscover_tvDiscription"
            fontPath="@string/Helvetica_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="@dimen/_16sdp"
            android:layout_toEndOf="@+id/itemDiscover_ivDiscover"
            android:layout_toRightOf="@+id/itemDiscover_ivDiscover"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="Vẻ đẹp thiên nhiên nơi vùng quê"
            android:textColor="@color/greyishBrownThree"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>
