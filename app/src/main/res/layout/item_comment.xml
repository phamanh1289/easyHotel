<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_6sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_6sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:padding="@dimen/_6sdp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/itemComment_ivUser"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/_45sdp"/>

            <include layout="@layout/view_loading_image"/>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_6sdp">


            <TextView
                android:id="@+id/itemComment_tvUserName"
                fontPath="@string/Helvetica_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nguyen Van A"
                android:textColor="@color/denimBlue"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:id="@+id/itemComment_tvDate"
                fontPath="@string/Helvetica_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:padding="@dimen/_2sdp"
                android:text="Nguyen Van A"
                android:textColor="@color/blur_background"
                android:textSize="@dimen/_8sdp"/>

            <TextView
                android:id="@+id/itemComment_tvDescription"
                fontPath="@string/Helvetica_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:text="\n a\n a\n a\n a\n a\n a\n a\n a"
                android:textColor="@color/greyishBrownThree"
                android:textSize="@dimen/_10sdp"/>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
