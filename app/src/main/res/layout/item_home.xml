<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/itemDiscover_llMain"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="@dimen/_4sdp"
             android:background="@drawable/shape_boder_main"
             app:cardElevation="@dimen/_6sdp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/itemHome_ivBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/_10sdp"/>

        <include layout="@layout/view_loading_image"/>
    </FrameLayout>


    <TextView
        fontPath="@string/Helvetica_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@drawable/selector_text_view_red"
        android:paddingBottom="@dimen/_4sdp"
        android:paddingLeft="@dimen/_8sdp"
        android:paddingRight="@dimen/_8sdp"
        android:paddingTop="@dimen/_4sdp"
        android:text="@string/booking_now"
        android:textColor="@color/whiteThree"
        android:textSize="@dimen/_8sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_boder_bottom_main"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemHome_tvTitle"
                fontPath="@string/Helvetica_bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/_6sdp"
                android:paddingTop="@dimen/_4sdp"
                android:text="Khách sạn Mường Thanh"
                android:textColor="@color/whiteThree"
                android:textSize="@dimen/_12sdp"/>


            <TextView
                android:id="@+id/itemHome_tvAddress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:paddingLeft="@dimen/_6sdp"
                android:paddingRight="@dimen/_4sdp"
                android:text="123/3 Bùi Thị Xuân, phường 3, Tân Bình."
                android:textColor="@color/whiteThree"
                android:textSize="@dimen/_10sdp"/>


        </LinearLayout>


    </LinearLayout>

</FrameLayout>
