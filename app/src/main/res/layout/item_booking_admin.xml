<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_6sdp"
    android:background="@color/whiteThree"
    android:clickable="true"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardElevation="@dimen/_6sdp">


    <LinearLayout
        android:id="@+id/fragBookingAdmin_llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_16sdp"
        android:paddingRight="@dimen/_16sdp">

        <ImageView
            android:id="@+id/fragBookingAdmin_ivBanner"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_signle_room"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:fletPaddingBottom="@dimen/_8sdp"
                app:fletTextAppearance="@color/greyishBrownThree">

                <EditText
                    android:id="@+id/fragBookingAdmin_tvEmail"
                    fontPath="@string/Helvetica_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="@string/full_name"
                    android:textColor="@color/denimBlue"
                    android:textColorHint="@color/denimBlue"
                    android:textSize="@dimen/_10sdp"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>


            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:fletPaddingBottom="@dimen/_8sdp"
                app:fletTextAppearance="@color/greyishBrownThree">

                <EditText
                    android:id="@+id/fragBookingAdmin_tvHotelName"
                    fontPath="@string/Helvetica_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="Hotel Name"
                    android:textColor="@color/denimBlue"
                    android:textColorHint="@color/denimBlue"
                    android:textSize="@dimen/_10sdp"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8sdp"
            android:orientation="horizontal">

            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:fletPaddingBottom="@dimen/_8sdp"
                app:fletTextAppearance="@color/greyishBrownThree">

                <EditText
                    android:id="@+id/fragBookingAdmin_tvStarDate"
                    fontPath="@string/Helvetica_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="Start Date"
                    android:textColor="@color/denimBlue"
                    android:textColorHint="@color/denimBlue"
                    android:textSize="@dimen/_10sdp"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>


            <com.wrapp.floatlabelededittext.FloatLabeledEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:fletPaddingBottom="@dimen/_8sdp"
                app:fletTextAppearance="@color/greyishBrownThree">

                <EditText
                    android:id="@+id/fragBookingAdmin_tvDueDate"
                    fontPath="@string/Helvetica_light"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="Due Date"
                    android:textColor="@color/denimBlue"
                    android:textColorHint="@color/denimBlue"
                    android:textSize="@dimen/_10sdp"/>
            </com.wrapp.floatlabelededittext.FloatLabeledEditText>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
