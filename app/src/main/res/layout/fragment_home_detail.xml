<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteThree"
    android:clickable="true"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/base_action_bar_home" />

        <TextView
            android:id="@+id/fragHomeDetail_tvNext"
            fontPath="@string/Helvetica_bold"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:gravity="center_vertical"
            android:padding="@dimen/_10sdp"
            android:text="Next"
            android:textColor="@color/whiteThree"
            android:visibility="gone" />
    </FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_8sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragHomeDetail_tvFormDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="Form Date"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/denimBlue"
                android:textColorHint="@color/denimBlue"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/fragHomeDetail_tvToDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="To Date"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/denimBlue"
                android:textColorHint="@color/denimBlue"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/fragHomeDetail_tvRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:hint="Room"
                android:padding="@dimen/_8sdp"
                android:textColor="@color/denimBlue"
                android:textColorHint="@color/denimBlue"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/fragHomeDetail_ivBanner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_marginBottom="@dimen/_17sdp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragHomeDetail_tvTitle"
                    fontPath="@string/Helvetica_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:textAllCaps="true"
                    android:textColor="@color/denimBlue"
                    android:textSize="@dimen/_13sdp" />

                <TextView
                    android:id="@+id/fragHomeDetail_tvDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textColor="@color/denimBlue"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
