<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_5sdp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal">


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/itemNew_imgView"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_news_demo"
        app:riv_corner_radius="@dimen/_15sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/_5sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/itemNew_tvTitle"
            fontPath="@string/font_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Vẻ đẹp thiên nhiên nơi vùng quê"
            android:textColor="@color/greyishBrownThree"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/itemNew_tvDate"
            fontPath="@string/font_sftext_semiBoldItalic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="03/10/2017"
            android:textColor="@color/greyishBrownThree"
            android:textSize="15sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/itemNew_tvDiscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Vẻ đẹp thiên nhiên nơi vùng quê,Vẻ đẹp thiên nhiên nơi vùng quê,Vẻ đẹp thiên nhiên nơi vùng quê,Vẻ đẹp thiên nhiên nơi vùng quê"
            android:textColor="@color/greyishBrownThree"
            android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>